<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilActivity">

    <!-- Perfil 1 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardPerfil1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp"
        android:padding="20dp"
        app:cardBackgroundColor="#BBDEFB"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imgPerfil1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/img111"
                android:scaleType="centerCrop"
                android:contentDescription="Foto Perfil 1"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/tvNombre1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Benjamín Soto"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FF5722"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvDescripcion1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apasionado por la tecnología y desarrollo Android."
                android:textSize="16sp"
                android:textColor="#5D4037"
                android:layout_marginTop="8dp"
                android:gravity="center"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Perfil 2 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardPerfil2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        android:padding="20dp"
        android:layout_marginTop="32dp"
        app:cardBackgroundColor="#FFCDD2"
        app:layout_constraintTop_toBottomOf="@id/cardPerfil1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imgPerfil2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/img1111"
                android:scaleType="centerCrop"
                android:contentDescription="Foto Perfil 2"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/tvNombre2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pablo Huentecura"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#D32F2F"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvDescripcion2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diseñador UX/UI con enfoque en experiencias amigables."
                android:textSize="16sp"
                android:textColor="#37474F"
                android:layout_marginTop="8dp"
                android:gravity="center"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Botón Volver -->
    <Button
        android:id="@+id/btnVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver al Menu"
        android:textSize="16sp"
        android:padding="12dp"
        android:backgroundTint="#607D8B"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/cardPerfil2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>